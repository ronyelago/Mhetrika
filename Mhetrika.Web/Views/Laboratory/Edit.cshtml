@model Mhetrika.Web.ViewModels.EditLaboratoryViewModel

<h2>Editar</h2>

<h4>Cadastro de Laboratório</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Nome</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">CNPJ</label>
                <input asp-for="Cnpj" class="form-control" />
                <span asp-validation-for="Cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">E-mail</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">CEP:</label>
                <input asp-for="AddressViewModel.Cep" class="form-control" />
                <span asp-validation-for="AddressViewModel.Cep" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">UF:</label>
                <input asp-for="AddressViewModel.Uf" class="form-control" />
                <span asp-validation-for="AddressViewModel.Uf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cidade:</label>
                <input asp-for="AddressViewModel.City" class="form-control"/>
                <span asp-validation-for="AddressViewModel.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Bairro:</label>
                <input asp-for="AddressViewModel.Neighbourhood" class="form-control" />
                <span asp-validation-for="AddressViewModel.Neighbourhood" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Rua:</label>
                <input asp-for="AddressViewModel.Street" class="form-control" />
                <span asp-validation-for="AddressViewModel.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Número:</label>
                <input asp-for="AddressViewModel.Number" class="form-control" />
                <span asp-validation-for="AddressViewModel.Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
    <br />
    <br />
    <br />
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
